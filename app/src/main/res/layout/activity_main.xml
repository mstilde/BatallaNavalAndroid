<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp">
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Batalla Naval"
        android:textSize="55sp"
        android:layout_marginTop="100sp"/>
    <TextView
        android:id="@+id/saludoJugador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titulo"
        android:layout_alignRight="@+id/titulo"
        android:layout_below="@+id/titulo"
        android:text="Bienvenido: Nuevo Jugador"
        android:layout_marginTop="100sp"
        android:gravity="center"/>
    <Button
        android:id="@+id/btnCambiarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titulo"
        android:layout_alignRight="@+id/titulo"
        android:layout_below="@+id/saludoJugador"
        android:text="Cambiar Nombre del Jugador"
        android:layout_marginTop="10sp"
        android:onClick="btnCambiarNombre"/>
    <GridLayout
        android:id="@+id/seleccionarDificultad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCambiarNombre"
        android:orientation="horizontal"
        android:layout_alignRight="@+id/titulo"
        android:layout_alignLeft="@+id/titulo">
        <Button
            android:onClick="btnCambiarDificultad"
            android:layout_gravity="fill_horizontal"
            android:text="Cambiar dificultad"/>
        <TextView
            android:id="@+id/viewDificultad"
            android:text="FÃ¡cil [6x6]"
            android:textSize="17sp"
            android:paddingRight="25sp"
            android:paddingLeft="25sp"/>
    </GridLayout>
    <Button
        android:layout_marginTop="30sp"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:layout_below="@+id/seleccionarDificultad"
        android:text="Comenzar Juego"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/titulo"
        android:layout_alignRight="@+id/titulo"
        android:onClick="iniciarNuevoJuego"
    />
    <Button
        android:id="@+id/ayuda"
        android:layout_marginTop="30sp"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:text="?"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="ayuda"
        />
</RelativeLayout>